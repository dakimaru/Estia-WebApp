<div class="span4 offset4 well" id="gray">
	<h2>Log In</h2>

	<%= form_tag sessions_path do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div><%= submit_tag "Log In", class: "btn" %></div><br>

	<p><%= link_to "Forgotten password?", new_password_reset_path %></p>

				<%= check_box_tag :remember_me, 1, params[:remember_me] %> Remember me

		<% end %>
	</div>