<div class="row">
	<div class="span4 offset4 well">
		<h1>Sign Up</h1>
		<%= form_for @user do |f| %>
			<%=render 'layouts/error_messages', object: f.object %>
			
			<%= f.label :first_name %>
      <%= f.text_field :first_name %>

			<%= f.label :last_name %>
      <%= f.text_field :last_name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

		<div class="actions"><%= f.submit "Sign Up" %></div>
		<% end %>
	</div>
</div>