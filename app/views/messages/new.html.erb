<% provide(:title, "Contact Us") %>
<div class="row">
	<div class="well span8 offset2">

		<h1>Contact Us</h1>

		<%= form_for @message do |f| %>
		<% if @message.errors.any? %>
		<div class="alert alert-block">
			<a><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</a>
			<ul>
				<% @message.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="row">
			<div class=" span3">

				<%= f.label :first_name, "First Name"%>
				<%= f.text_field :first_name, :placeholder => "Your First Name"  %>

				<%= f.label :last_name, "Last Name" %>
				<%= f.text_field :last_name, :placeholder => "Your Last Name" %>

				<%= f.label :email %>
				<%= f.text_field :email, :placeholder => "Your email address" %>

				<%= f.label :subject %>
				<%= f.text_field :subject, :placeholder => "What's the matter?"  %>

			</div>

			<div class="span5">
				<%= f.label :content, "Message" %>
				<%= f.text_area :content, :rows => 11, class: "span5" %>
			</div>

			<div class="action"><%= f.submit "Send Message", class: "btn btn-primary pull-right" %></div>

			<% end %>

		</div>
	</div>
</div>